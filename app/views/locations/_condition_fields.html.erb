<div class="field"> 
	<div class="form-group">
		<%= f.attribute_fields do |a| %>
		<%= a.attribute_select({}, :class => 'form-control') %>
		<% end %>
	</div>
	<div class="form-group">
		<%= f.predicate_select({:only => [:cont,:lt,:gt], compounds: false}, :class => 'form-control') %>
	</div>
	<div class="form-group">
		<%= f.value_fields do |v| %>
		<%= v.text_field :value, :class => 'form-control', :style => 'width:100%;' %>
		<% end %>
	</div>
		<%= link_to "X", '#', class: "remove_fields form-control btn btn-red btn-xs outline" %>
</div>

